developer=http://jenkins-ci.org/
url=${developer}
maintainer=http://indiecomputing.com/
_plugin=git-client
pkgname=$(basename $(pwd))
pkgver=1.9.2
pkgrel=3
pkgdesc="Shared library plugin for other Git related Jenkins plugins."
arch=('any')
license=("MIT")
depends=('git')
source=("http://updates.jenkins-ci.org/download/plugins/${_plugin}/${pkgver}/${_plugin}.hpi")
options=('!strip')
md5sums=('266eb3bf8429f92d08ba6e74b037760c')

package() {
# Manifest
    mkdir -p $pkgdir/var/lib/ubos/manifests
    install -m0644 $startdir/ubos-manifest.json $pkgdir/var/lib/ubos/manifests/${pkgname}.json

# Icons
    # mkdir -p $pkgdir/srv/http/_appicons/$pkgname
    # install -m644 $startdir/appicons/{72x72,144x144}.png $pkgdir/srv/http/_appicons/$pkgname/

# Source
    mkdir -p $pkgdir/usr/share/${pkgname}
    cp -a $startdir/src/${_plugin}.hpi $pkgdir/usr/share/${pkgname}/
}
